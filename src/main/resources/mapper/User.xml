<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <select id="selectUserById" resultType="com.example.demo.entity.UserEntity" parameterType="Integer">
        SELECT id, name, dept, website, phone FROM user WHERE id = #{id}
    </select>

    <select id="selectAllUsers" resultType="com.example.demo.entity.UserEntity">
        SELECT * FROM user;
    </select>

    <insert id="addUser" parameterType="com.example.demo.entity.UserEntity">
        INSERT INTO user VALUES(#{userEntity.id}, #{userEntity.name}, #{userEntity.dept}, #{userEntity.website}, #{userEntity.phone});
    </insert>

    <update id="updateName" parameterType="com.example.demo.entity.IdNameEntity">
        UPDATE user SET name = #{name} WHERE id = #{id};
    </update>
</mapper>